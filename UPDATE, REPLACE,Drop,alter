/*add col*/
Alter table
Add COLUMN datatype;

/*update an existing column*/
UPDATE table_name
SET column1 = value1, column2 = value2, ...
WHERE condition;

Update salary
SET sex = replace('fm',sex,'');

Update salary
SET sex = CASE sex
        WHEN 'm' then 'f'
        ELSE 'm';

/* drop and existing col*/
Drop column A
From table;


/* delete rows*/
Delete from table
Where condition;
/* insert  rows*/
INSERT INTO table_name (column1, column2, column3, ...)
VALUES (value1, value2, value3, ...);
